<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ“‹ Elementos de Lista"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:textColor="@color/primary" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Las listas muestran colecciones de elementos de forma organizada. ListView es mÃ¡s simple, mientras que RecyclerView ofrece mejor rendimiento y flexibilidad."
        android:textSize="16sp"
        android:layout_marginBottom="24dp"
        android:textColor="@color/text_secondary" />

    <!-- ListView Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ListView - Lista simple:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Toca cualquier fruta:"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:layout_marginBottom="8dp" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/rounded_background"
        android:divider="@color/divider"
        android:dividerHeight="1dp"
        android:layout_marginBottom="24dp" />

    <!-- RecyclerView Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RecyclerView - Lista avanzada:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Toca cualquier aplicaciÃ³n:"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:layout_marginBottom="8dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/rounded_background"
        android:padding="8dp"
        android:layout_marginBottom="16dp" />

    <!-- Selected Item Display -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Elemento seleccionado:"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/textViewSelected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selecciona un elemento de cualquier lista..."
        android:background="@drawable/rounded_background"
        android:padding="16dp"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:minHeight="60dp"
        android:gravity="center_vertical" />

</LinearLayout>